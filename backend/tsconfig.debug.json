{
  "exclude": [
    "./batches/**/*",
    "./node_modules/**/*",
    "./build/**/*",
    "./debug_build/**/*",
    "./src/tests/**/*",
    "*.json"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "./debug_build",
    "skipLibCheck": true,
    "lib": ["ES2019"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "esModuleInterop": true,
  }
}